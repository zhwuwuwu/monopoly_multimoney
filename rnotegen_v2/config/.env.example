# Environment Configuration
OPENAI_BASE_URL=http://model-service.aihub.intel.com
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=GPT-4o
OPENAI_TEMPERATURE=0.7

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:5000
MCP_TIMEOUT=30

# RedNote/Xiaohongshu Configuration
REDNOTE_ACCESS_TOKEN=your_rednote_access_token
REDNOTE_APP_ID=your_app_id
REDNOTE_APP_SECRET=your_app_secret
REDNOTE_API_BASE=https://api.xiaohongshu.com

# Content Generation Settings
ENABLE_FACT_CHECKING=true
ENABLE_INTERNET_RESEARCH=true
MAX_RESEARCH_QUERIES=5
CONTENT_QUALITY_THRESHOLD=7.0
MAX_RETRY_ATTEMPTS=2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/columnist_agent_v2.log