# Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Xiaohongshu API Configuration
XIAOHONGSHU_ACCESS_TOKEN=your_xiaohongshu_access_token
XIAOHONGSHU_APP_ID=your_app_id
XIAOHONGSHU_APP_SECRET=your_app_secret
XIAOHONGSHU_API_BASE=https://api.xiaohongshu.com

# MCP Configuration
MCP_SERVER_URL=ws://localhost:8000
MCP_TIMEOUT=30

# Research Tools Configuration
SEARCH_ENGINE_API_KEY=your_search_api_key
NEWS_API_KEY=your_news_api_key

# Content Generation Settings
ENABLE_FACT_CHECKING=true
ENABLE_INTERNET_RESEARCH=true
MAX_RESEARCH_QUERIES=5
CONTENT_QUALITY_THRESHOLD=0.8

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/columnist_agent.log