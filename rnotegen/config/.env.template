# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
# Set your OpenAI API base URL (leave empty for default OpenAI endpoint)
OPENAI_BASE_URL=
# Set your OpenAI API key
OPENAI_API_KEY=
OPENAI_MODEL=GPT-4o
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Xiaohongshu API Configuration
XIAOHONGSHU_ACCESS_TOKEN=your_xiaohongshu_access_token
XIAOHONGSHU_APP_ID=your_app_id
XIAOHONGSHU_APP_SECRET=your_app_secret
XIAOHONGSHU_API_BASE=https://api.xiaohongshu.com

# MCP Configuration
MCP_SERVER_URL=ws://localhost:8000
MCP_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/columnist.log

# Example configurations:
# For OpenAI official API:
# OPENAI_BASE_URL=
# OPENAI_API_KEY=sk-your-openai-key-here

# For custom OpenAI-compatible API:
# OPENAI_BASE_URL=http://model-service.aihub.intel.com
# OPENAI_API_KEY=your-custom-api-key

# For local model server:
# OPENAI_BASE_URL=http://localhost:8080/v1
